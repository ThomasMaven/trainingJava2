<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
	   http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="helloBean" class="repo.HelloWorld">
        <property name="name" value="Tomek" />
    </bean>

    <bean id="service.MovieLister" class="service.MovieLister">
        <property name="finder">
            <ref local="MovieFinderForeign"/>
        </property>
    </bean>

    <bean id="MovieFinderPL" class="repo.PolishMovieFinder"/>
    <bean id="MovieFinderForeign" class="repo.ForeignMovieFinder"/>


</beans>